<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/personText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="个人信息"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stuNumTag"
        android:text="学号："
        android:layout_below="@+id/personText"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vCodeTag"
        android:text="校验码："
        android:layout_below="@+id/stuNumTag"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stuNumText"
        android:layout_below="@+id/personText"
        android:layout_toRightOf="@+id/stuNumTag"
        android:text="test"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vCodeText"
        android:layout_below="@+id/stuNumTag"
        android:layout_toRightOf="@+id/vCodeTag"
        android:text="test"
        android:textSize="25sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftText"
        android:text="剩余床位信息"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/stuNumTag"
        android:layout_marginTop="70sp"/>

    <TextView
        android:id="@+id/left5Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五号楼："
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/leftText"/>

    <TextView
        android:id="@+id/left13Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="十三号楼："
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left5Text"/>

    <TextView
        android:id="@+id/left14Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="十四号楼："
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left13Text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buildingNumText"
        android:text="目标宿舍楼："
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left14Text"
        android:layout_marginTop="50dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildingNumSpin"
        android:layout_below="@+id/left14Text"
        android:layout_toRightOf="@+id/buildingNumText"
        android:layout_marginTop="50dp">

    </Spinner>



    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/submitBtn"
        android:src="@drawable/submit_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buildingNumText"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
